# API Authentication (for REST API)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MASTER_API_KEY=your_master_api_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=4
CACHE_TTL=3600

# Tor Configuration (for dark web monitoring)
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=

# Proxy Settings (Optional)
HTTP_PROXY=
HTTPS_PROXY=
SOCKS_PROXY=

# File Paths (customize if needed)
OUTPUT_DIR=./output
CACHE_DIR=./.cache
LOG_DIR=./logs
MODULES_DIR=./modules

# Security Settings
ENABLE_API_AUTH=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_FACIAL_RECOGNITION=false
ENABLE_DARK_WEB_MONITORING=false
ENABLE_CREDENTIAL_STUFFING=false
ENABLE_AI_ANALYSIS=true

# Monitoring & Alerts
